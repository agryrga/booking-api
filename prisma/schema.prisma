datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int       @id @default(autoincrement())
  name     String
  email    String    @unique
  password String
  role     Role      @default(USER)
  bookings Booking[] // обратное отношение
}

enum Role {
  USER
  ADMIN
}

model Booking {
  id          Int       @id @default(autoincrement())
  start       DateTime
  description String?
  user        User      @relation(fields: [userId], references: [id])
  userId      Int
}

